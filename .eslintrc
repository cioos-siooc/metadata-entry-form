{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": { "browser": true, "jest": true },
  "rules": {
    "no-console": "off",
    "comma-dangle": ["error", "always-multiline"],
    "react/no-array-index-key": 0,
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [">", "}"]
      }
    ],
    "react/prop-types": 0
  }
}
